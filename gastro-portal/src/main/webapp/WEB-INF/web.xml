<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
        version="2.5">

    <display-name>Gastromarket.ru :: Portal</display-name>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:gastro-portal.xml classpath:security.xml</param-value>
    </context-param>
    <context-param>
        <param-name>imageDestinationUrl</param-name>
        <param-value>${mvn.image.url}</param-value>
    </context-param>
    <context-param>
        <param-name>imageDestinationPath</param-name>
        <param-value>${mvn.image.path}</param-value>
    </context-param>
    <context-param>
        <param-name>tapestry.app-package</param-name>
        <param-value>org.ohm.gastro.gui</param-value>
    </context-param>
    <context-param>
        <param-name>tapestry.hmac-passphrase</param-name>
        <param-value>syEur3Sh</param-value>
    </context-param>
    <context-param>
        <param-name>tapestry.app-catalog</param-name>
        <param-value>context:WEB-INF/classes/lang.properties</param-value>
    </context-param>
    <context-param>
        <param-name>tapestry.components.grid_rows_per_page</param-name>
        <param-value>25</param-value>
    </context-param>
    <context-param>
        <param-name>tapestry.components.zone_update_method</param-name>
        <param-value>none</param-value>
    </context-param>
    <context-param>
        <param-name>tapestry.components.zone_show_method</param-name>
        <param-value>none</param-value>
    </context-param>
    <context-param>
        <param-name>tapestry.components.grid_pager_position</param-name>
        <param-value>bottom</param-value>
    </context-param>
    <context-param>
        <param-name>tapestry.gzip-compression-enabled</param-name>
        <param-value>false</param-value>
    </context-param>
    <context-param>
        <param-name>tapestry.charset</param-name>
        <param-value>UTF-8</param-value>
    </context-param>
    <context-param>
        <param-name>tapestry.combine-scripts</param-name>
        <param-value>false</param-value>
    </context-param>
    <context-param>
        <param-name>tapestry.omit-generator-meta</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>tapestry.supported-locales</param-name>
        <param-value>ru</param-value>
    </context-param>
    <context-param>
        <param-name>tapestry.production-mode</param-name>
        <param-value>${mvn.prod.mode}</param-value>
    </context-param>
    <context-param>
        <param-name>tapestry.use-external-spring-context</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>staticResourceUrls</param-name>
        <param-value>/assets,/modules,/fonts,/css,/img,/favicon.ico,/js,/robots.txt</param-value>
    </context-param>

    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>openSessionInViewFilter</filter-name>
        <filter-class>org.springframework.orm.jpa.support.OpenEntityManagerInViewFilter</filter-class>
    </filter>
    <filter>
        <filter-name>app</filter-name>
        <filter-class>org.apache.tapestry5.spring.TapestrySpringFilter</filter-class>
    </filter>
    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
    <filter>
        <filter-name>applicationFilter</filter-name>
        <filter-class>org.ohm.gastro.filter.ApplicationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>socialFilter</filter-name>
        <filter-class>org.ohm.gastro.filter.SocialFilter</filter-class>
    </filter>
    <filter>
        <filter-name>uploadFilter</filter-name>
        <filter-class>org.ohm.gastro.filter.UploadFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>openSessionInViewFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>applicationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>socialFilter</filter-name>
        <url-pattern>/social/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>uploadFilter</filter-name>
        <url-pattern>/upload/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>app</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <error-page>
        <error-code>403</error-code>
        <location>/E403</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/E404</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/E500</location>
    </error-page>

    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>

</web-app>
