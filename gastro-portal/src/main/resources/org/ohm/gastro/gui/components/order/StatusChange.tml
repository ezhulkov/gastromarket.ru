<div xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" class="status">
    <t:if test="order.tender">
        Статус заявки:&nbsp;
        <t:parameter name="else">
            Статус заказа:&nbsp;
        </t:parameter>
    </t:if>
    <t:if test="canChangeState">
        <a href="#order_status_${order.id}" class="dotted-link f20px" data-toggle="modal" data-target="#order_status_${order.id}">${orderStatusText}</a>

        <div class="modal fade" id="order_status_${order.id}" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="title">
                            <h1><span>Изменение статуса</span></h1>
                        </div>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Закрыть"><span aria-hidden="true">×</span></button>
                    </div>
                    <div class="modal-body form">
                        <t:loop source="statuses" value="status" t:formState="NONE">
                            <t:if test="statusAction">
                                <div class="row">
                                    <div class="col-sm-4 col-xs-12 fluid-xs-block">
                                        <t:actionlink rel="nofollow" t:id="statusChange" t:context="[order.id,status]" t:zone="${orderShowCatalogZoneId}" class="dotted-link f18px">${statusAction}</t:actionlink>
                                    </div>
                                    <div class="col-sm-8 col-xs-12 text-left lhnormal"><i class="f16px">&mdash; ${statusTitle}</i></div>
                                </div>
                            </t:if>
                        </t:loop>
                        <t:if test="hasCancel">
                            <t:if test="catalog?.cancellationRaw">
                                <div class="col-xs-12">
                                    <div class="description gap text-left f14px">
                                        <div class="f18px">Условия отмены:</div>
                                        <t:outputraw value="catalog.cancellationRaw"/>
                                    </div>
                                </div>
                            </t:if>
                        </t:if>
                        <div class="gap">&nbsp;</div>
                    </div>
                </div>
            </div>
        </div>
        <t:parameter name="else">
            <span class="red-text">${orderStatusText}</span>
        </t:parameter>
    </t:if>
</div>