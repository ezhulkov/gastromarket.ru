<t:htmlLayout xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">

    <div class="catalogs">
        <div class="container">
            <div class="title">
                <h1><span>Кулинары</span></h1>
            </div>
        </div>
        <t:loop source="catalogs" value="oneCatalog">
            <div class="chefs">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="chef text-right">
                                <t:pagelink page="catalog/index" t:context="oneCatalog.altId"><img class="pic" src="${oneCatalog.avatarUrlMedium}"/></t:pagelink>

                                <div class="name">
                                    <t:pagelink page="catalog/index" t:context="oneCatalog.altId">${oneCatalog.name}</t:pagelink>
                                </div>
                                <div class="cats">${categories}</div>
                                <div class="data-header pull-right">
                                    <t:pagelink page="catalog/products" t:context="oneCatalog.altId">Весь каталог<span/></t:pagelink>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-9">
                            <div id="product-items" class="grid-block products">
                                <t:loop source="products" value="oneProduct">
                                    <t:product product="oneProduct" class="fixed"/>
                                </t:loop>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t:loop>
        <t:productmodaltemplate/>
    </div>

    <script>
        jQuery(initProductCatalogFixed);
    </script>

</t:htmlLayout>