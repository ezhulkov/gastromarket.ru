<div xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" class="ratings">
    <t:unless test="customer">
        Рейтинг: <a href="/rating" class="rating">${catalog.level}</a>&nbsp;&nbsp;
    </t:unless>
    Отзывы:
    <t:if test="hasRatings">
        <span class="pos">+${posRatings}</span> / <span class="neg">-${negRatings}</span>
        <t:parameter name="else">
            <span class="no">нет отзывов</span>
        </t:parameter>
    </t:if>
</div>