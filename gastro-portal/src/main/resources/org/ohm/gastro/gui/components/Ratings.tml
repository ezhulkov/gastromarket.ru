<div xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" class="ratings">
    <t:if test="catalog">
        Рейтинг: <a href="#ratings-modal" data-toggle="modal" data-target="#ratings-modal" class="rating">${catalog.level}</a>&nbsp;&nbsp;
    </t:if>
    <t:if test="hasRatings">
        Отзывы:
        <t:pagelink page="catalog/index" context="catalog?.altId" anchor="replies"><span class="pos">+${posRatings}</span> / <span class="neg">-${negRatings}</span></t:pagelink>
    </t:if>
</div>