<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet author="ezhulkov" id="1">
        <createTable tableName="hibernate_sequences">
            <column name="sequence_name" type="java.sql.Types.VARCHAR(255)"/>
            <column name="sequence_next_hi_value" type="java.sql.Types.INTEGER"/>
        </createTable>
        <createIndex tableName="hibernate_sequences" indexName="hs_name">
            <column name="sequence_name"/>
        </createIndex>
        <createTable tableName="property">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="java.sql.Types.VARCHAR(64)"/>
            <column name="type" type="java.sql.Types.VARCHAR(64)"/>
        </createTable>
        <createTable tableName="property_value">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="property_id" type="java.sql.Types.BIGINT"/>
            <column name="value" type="java.sql.Types.VARCHAR(64)"/>
        </createTable>
        <createTable tableName="category">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="java.sql.Types.VARCHAR(64)"/>
        </createTable>
        <createTable tableName="category_property">
            <column name="category_id" type="java.sql.Types.BIGINT"/>
            <column name="property_id" type="java.sql.Types.BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="property_value" baseColumnNames="property_id"
                constraintName="value_property_fk" referencedTableName="property" referencedColumnNames="id"
                deleteCascade="true"/>
        <addForeignKeyConstraint baseTableName="category_property" baseColumnNames="property_id"
                constraintName="cp_property_fk" referencedTableName="property" referencedColumnNames="id"
                deleteCascade="true"/>
        <addForeignKeyConstraint baseTableName="category_property" baseColumnNames="category_id"
                constraintName="cp_category_fk" referencedTableName="category" referencedColumnNames="id"
                deleteCascade="true"/>
    </changeSet>

    <changeSet author="ezhulkov" id="2">
        <createTable tableName="person">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="java.sql.Types.VARCHAR(64)"/>
            <column name="email" type="java.sql.Types.VARCHAR(64)"/>
            <column name="password" type="java.sql.Types.VARCHAR(256)"/>
            <column name="type" type="java.sql.Types.VARCHAR(32)"/>
        </createTable>
        <createTable tableName="cook">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="java.sql.Types.VARCHAR(64)"/>
            <column name="description" type="java.sql.Types.VARCHAR(512)"/>
            <column name="user_id" type="java.sql.Types.BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="cook" baseColumnNames="user_id"
                constraintName="cook_user_fk" referencedTableName="person" referencedColumnNames="id"
                deleteCascade="true"/>
    </changeSet>

</databaseChangeLog>