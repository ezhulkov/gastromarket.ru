<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet author="ezhulkov" id="1">
        <createTable tableName="hibernate_sequences">
            <column name="sequence_name" type="java.sql.Types.VARCHAR(255)"/>
            <column name="sequence_next_hi_value" type="java.sql.Types.INTEGER"/>
        </createTable>
        <createIndex tableName="hibernate_sequences" indexName="hs_name">
            <column name="sequence_name"/>
        </createIndex>
        <createTable tableName="property">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="java.sql.Types.VARCHAR(64)"/>
            <column name="type" type="java.sql.Types.VARCHAR(64)"/>
        </createTable>
        <createTable tableName="property_value">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="property_id" type="java.sql.Types.BIGINT"/>
            <column name="value" type="java.sql.Types.VARCHAR(64)"/>
        </createTable>
        <createTable tableName="category">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="java.sql.Types.VARCHAR(64)"/>
        </createTable>
        <createTable tableName="category_property">
            <column name="category_id" type="java.sql.Types.BIGINT"/>
            <column name="property_id" type="java.sql.Types.BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="property_value" baseColumnNames="property_id"
                constraintName="value_property_fk" referencedTableName="property" referencedColumnNames="id"
                onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="category_property" baseColumnNames="property_id"
                constraintName="cp_property_fk" referencedTableName="property" referencedColumnNames="id"
                onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="category_property" baseColumnNames="category_id"
                constraintName="cp_category_fk" referencedTableName="category" referencedColumnNames="id"
                onDelete="CASCADE"/>
        <createIndex tableName="property_value" indexName="value_prop_idx">
            <column name="property_id"/>
        </createIndex>
        <createIndex tableName="category_property" indexName="cat_prop_prop_idx">
            <column name="property_id"/>
        </createIndex>
        <createIndex tableName="category_property" indexName="cat_prop_cat_idx">
            <column name="category_id"/>
        </createIndex>
    </changeSet>

    <changeSet author="ezhulkov" id="2">
        <createTable tableName="person">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="java.sql.Types.VARCHAR(64)"/>
            <column name="password" type="java.sql.Types.VARCHAR(256)"/>
            <column name="type" type="java.sql.Types.VARCHAR(32)"/>
        </createTable>
        <createTable tableName="catalog">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="java.sql.Types.VARCHAR(64)"/>
            <column name="description" type="java.sql.Types.VARCHAR(512)"/>
            <column name="user_id" type="java.sql.Types.BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="catalog" baseColumnNames="user_id"
                constraintName="catalog_user_fk" referencedTableName="person" referencedColumnNames="id"
                onDelete="CASCADE"/>
        <addUniqueConstraint tableName="person" columnNames="email"/>
        <createIndex tableName="catalog" indexName="cat_user_idx">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

    <changeSet author="ezhulkov" id="3">
        <createTable tableName="product">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="catalog_id" type="java.sql.Types.BIGINT"/>
            <column name="category_id" type="java.sql.Types.BIGINT"/>
            <column name="name" type="java.sql.Types.VARCHAR(64)"/>
            <column name="price" type="java.sql.Types.INTEGER"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="product" baseColumnNames="catalog_id"
                constraintName="prod_catalog_fk" referencedTableName="catalog" referencedColumnNames="id"
                onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="product" baseColumnNames="category_id"
                constraintName="prod_category_fk" referencedTableName="category" referencedColumnNames="id"
                onDelete="CASCADE"/>
        <createIndex tableName="product" indexName="prod_catalog_idx">
            <column name="catalog_id"/>
        </createIndex>
        <createIndex tableName="product" indexName="prod_category_idx">
            <column name="category_id"/>
        </createIndex>
        <createTable tableName="product_property">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="java.sql.Types.BIGINT"/>
            <column name="property_id" type="java.sql.Types.BIGINT"/>
            <column name="data" type="java.sql.Types.VARCHAR(64)"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="product_property" baseColumnNames="product_id"
                constraintName="pv_prod_fk" referencedTableName="product" referencedColumnNames="id"
                onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="product_property" baseColumnNames="property_id"
                constraintName="pv_prop_fk" referencedTableName="property" referencedColumnNames="id"
                onDelete="CASCADE"/>
        <createIndex tableName="product_property" indexName="pr_val_product_idx">
            <column name="product_id"/>
        </createIndex>
        <createIndex tableName="product_property" indexName="pr_val_prop_idx">
            <column name="property_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="4" author="ezhulkov">
        <sql>
            insert into person (id,email,password,type,status) values (1,'admin@gastromarket.ru','aa9304926e54bf318a40dc9cb936e62f86327f987461178b01a85ae5a500bd43639908f104ae7d5f','ADMIN','ENABLED');
            update hibernate_sequences set sequence_next_hi_value=2 where sequence_name='person';
        </sql>
    </changeSet>

    <changeSet id="5" author="ezhulkov">
        <addColumn tableName="product">
            <column name="description" type="java.sql.Types.VARCHAR(1024)"/>
        </addColumn>
        <sql>
            create index product_fts_idx on product using gin(to_tsvector('russian', name || ' ' || description));
        </sql>
    </changeSet>

    <changeSet id="6" author="ezhulkov">
        <addColumn tableName="category">
            <column name="parent_id" type="java.sql.Types.BIGINT"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="category" baseColumnNames="parent_id"
                constraintName="cat_parent_fk" referencedTableName="category" referencedColumnNames="id"
                onDelete="CASCADE"/>
        <createIndex tableName="category" indexName="cat_parent_idx">
            <column name="parent_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="7" author="ezhulkov">
        <addColumn tableName="catalog">
            <column name="was_setup" type="java.sql.Types.BOOLEAN" defaultValueBoolean="false"/>
        </addColumn>
    </changeSet>

    <changeSet id="8" author="ezhulkov">
        <addColumn tableName="catalog">
            <column name="rating" type="java.sql.Types.INTEGER" defaultValue="0"/>
        </addColumn>
        <createTable tableName="rating">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="catalog_id" type="java.sql.Types.BIGINT"/>
            <column name="author_id" type="java.sql.Types.BIGINT"/>
            <column name="comment" type="java.sql.Types.VARCHAR(512)"/>
            <column name="rating" type="java.sql.Types.INTEGER"/>
            <column name="date" type="java.sql.Types.TIMESTAMP"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="rating" baseColumnNames="catalog_id"
                constraintName="rating_cat_fk" referencedTableName="catalog" referencedColumnNames="id"
                onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="rating" baseColumnNames="author_id"
                constraintName="rating_author_fk" referencedTableName="person" referencedColumnNames="id"
                onDelete="CASCADE"/>
        <createIndex tableName="rating" indexName="rating_catalog_idx">
            <column name="catalog_id"/>
        </createIndex>
        <createIndex tableName="rating" indexName="rating_author_idx">
            <column name="author_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="9" author="ezhulkov">
        <addColumn tableName="catalog">
            <column name="date" type="java.sql.Types.TIMESTAMP"/>
        </addColumn>
        <addColumn tableName="person">
            <column name="date" type="java.sql.Types.TIMESTAMP"/>
        </addColumn>
        <addColumn tableName="product">
            <column name="date" type="java.sql.Types.TIMESTAMP"/>
        </addColumn>
    </changeSet>

    <changeSet id="10" author="ezhulkov">
        <addColumn tableName="person">
            <column name="status" type="java.sql.Types.VARCHAR(16)"/>
            <column name="referrer_id" type="java.sql.Types.BIGINT"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="person" baseColumnNames="referrer_id"
                constraintName="person_ref_fk" referencedTableName="person" referencedColumnNames="id" onDelete="NO ACTION"/>
        <createIndex tableName="person" indexName="person_ref_idx">
            <column name="referrer_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="11" author="ezhulkov">
        <addColumn tableName="catalog">
            <column name="delivery" type="java.sql.Types.VARCHAR(512)"/>
        </addColumn>
    </changeSet>

    <changeSet id="12" author="ezhulkov">
        <addColumn tableName="person">
            <column name="anonymous" type="java.sql.Types.BOOLEAN" defaultValueBoolean="false"/>
            <column name="full_name" type="java.sql.Types.VARCHAR(64)"/>
            <column name="delivery_address" type="java.sql.Types.VARCHAR(512)"/>
            <column name="mobile_phone" type="java.sql.Types.VARCHAR(16)"/>
        </addColumn>
        <createTable tableName="purchase">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="customer_id" type="java.sql.Types.BIGINT"/>
            <column name="comment" type="java.sql.Types.VARCHAR(512)"/>
            <column name="date" type="java.sql.Types.TIMESTAMP"/>
            <column name="status" type="java.sql.Types.VARCHAR(16)"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="purchase" baseColumnNames="customer_id"
                constraintName="purchase_cust_fk" referencedTableName="person" referencedColumnNames="id"
                onDelete="CASCADE"/>
        <createIndex tableName="purchase" indexName="purchase_cust_idx">
            <column name="customer_id"/>
        </createIndex>
        <createTable tableName="purchase_product">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="purchase_id" type="java.sql.Types.BIGINT"/>
            <column name="product_id" type="java.sql.Types.BIGINT"/>
            <column name="price" type="java.sql.Types.INTEGER"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="purchase_product" baseColumnNames="purchase_id"
                constraintName="purchasep_purchase_fk" referencedTableName="purchase" referencedColumnNames="id"
                onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="purchase_product" baseColumnNames="product_id"
                constraintName="purchasep_prod_fk" referencedTableName="product" referencedColumnNames="id"
                onDelete="CASCADE"/>
        <createIndex tableName="purchase_product" indexName="purchasep_purchaser_idx">
            <column name="purchase_id"/>
        </createIndex>
        <createIndex tableName="purchase_product" indexName="purchasep_prod_idx">
            <column name="product_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="13" author="ezhulkov">
        <createTable tableName="message">
            <column name="id" type="java.sql.Types.BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sender_id" type="java.sql.Types.BIGINT"/>
            <column name="recipient_id" type="java.sql.Types.BIGINT"/>
            <column name="sender_status" type="java.sql.Types.VARCHAR(16)"/>
            <column name="recipient_status" type="java.sql.Types.VARCHAR(16)"/>
            <column name="recipient_type" type="java.sql.Types.VARCHAR(16)"/>
            <column name="subject" type="java.sql.Types.VARCHAR(128)"/>
            <column name="body" type="java.sql.Types.VARCHAR(1024)"/>
            <column name="create_date" type="java.sql.Types.TIMESTAMP"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="message" baseColumnNames="sender_id"
                constraintName="message_sender_fk" referencedTableName="person" referencedColumnNames="id"
                onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="message" baseColumnNames="recipient_id"
                constraintName="message_rcpt_fk" referencedTableName="person" referencedColumnNames="id"
                onDelete="CASCADE"/>
        <createIndex tableName="message" indexName="message_sender_idx">
            <column name="sender_id"/>
        </createIndex>
        <createIndex tableName="message" indexName="message_rcpt_idx">
            <column name="recipient_id"/>
        </createIndex>
        <createIndex tableName="message" indexName="message_sender_status_idx">
            <column name="sender_status"/>
        </createIndex>
        <createIndex tableName="message" indexName="message_rcpt_status_idx">
            <column name="recipient_status"/>
        </createIndex>
        <createIndex tableName="message" indexName="message_rcpt_type_idx">
            <column name="recipient_type"/>
        </createIndex>
        <createIndex tableName="message" indexName="message_date_idx">
            <column name="create_date"/>
        </createIndex>
    </changeSet>

    <changeSet id="14" author="ezhulkov">
        <addColumn tableName="person">
            <column name="bonus" type="java.sql.Types.INTEGER"/>
        </addColumn>
    </changeSet>

    <changeSet id="15" author="ezhulkov">
        <addColumn tableName="product">
            <column name="promoted" type="java.sql.Types.BOOLEAN"/>
        </addColumn>
    </changeSet>

    <changeSet id="16" author="ezhulkov">
        <addColumn tableName="person">
            <column name="avatar_url" type="java.sql.Types.VARCHAR(256)"/>
            <column name="avatar_url_small" type="java.sql.Types.VARCHAR(256)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>