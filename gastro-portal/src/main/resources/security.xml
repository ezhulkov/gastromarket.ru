<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
        xmlns:beans="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <http pattern="/favicon.ico" security="none"/>
    <http pattern="/robots.txt" security="none"/>
    <http pattern="/module/**" security="none"/>
    <http pattern="/assets/**" security="none"/>
    <http pattern="/css/**" security="none"/>
    <http pattern="/js/**" security="none"/>
    <http pattern="/img/**" security="none"/>

    <http access-denied-page="/e403" use-expressions="true" auto-config="true">
        <intercept-url pattern="/office" access="hasAnyRole('COOK,ADMIN,USER')"/>
        <intercept-url pattern="/office/**" access="hasAnyRole('COOK,ADMIN,USER')"/>
        <intercept-url pattern="/admin" access="hasRole('ADMIN')"/>
        <intercept-url pattern="/admin/**" access="hasRole('ADMIN')"/>
        <intercept-url pattern="/" access="hasAnyRole('ROLE_ANONYMOUS,COOK,USER,ADMIN')"/>
        <intercept-url pattern="/index" access="hasAnyRole('ROLE_ANONYMOUS,COOK,USER,ADMIN')"/>
        <form-login login-page="/login" default-target-url="/index" always-use-default-target="true" authentication-failure-url="/login/error" login-processing-url="/j_security_check"/>
        <logout logout-url="/logout" logout-success-url="/" invalidate-session="true"/>
        <remember-me user-service-ref="userService" key="b6cNMFz1W8BFNDQPmPg2cuXJamNgCmOc"/>
    </http>

    <authentication-manager alias="authenticationManager">
        <authentication-provider user-service-ref="userService">
            <password-encoder ref="passwordEncoder"/>
        </authentication-provider>
    </authentication-manager>

    <beans:bean id="passwordEncoder" class="org.springframework.security.crypto.password.StandardPasswordEncoder"/>

</beans:beans>